<body onload="listardepartamento(),listarescalas()">
  <div>
    <h1>Funcionários</h1>
    <div>
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
              <form class="d-flex" role="search" method="post" action="/funcionarios/buscarfuncionarios">
                <input class="form-control me-2" type="search" placeholder="Procurar" aria-label="Search" name="busca">
                <button class="btn btn-outline-success" type="submit">Buscar</button>
              </form>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo"><i class="fas fa-plus"></i> Cadastrar</button>
            </div>
          </nav>
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar Novo Funcionario</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form method="post" action="/funcionarios/cadastrarfuncionarios">
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">CPF:</label>
                      <input name="funcionarioCPF" type="text" class="form-control" id="funcionarioCPF" required="required">
                    </div>
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">Nome:</label>
                      <input name="funcionarioNome" type="text" class="form-control" id="funcionarioNome" required="required">
                    </div>
                    <div class="mb-3">
                      <label for="message-text" class="col-form-label">Cargo:</label>
                      <select oninput="setardepartamento(document.getElementById('cargo_idCargo').value)"  id="cargo_idCargo" name="cargo_idCargo" class="form-select" aria-label="Default select example" required="required">
                        
                      </select>
                    </div>   
                    <div class="mb-3">
                      <label for="message-text" class="col-form-label">Departamento:</label>
                      <select id="departamento_idDepartamento" name="departamento_idDepartamento" class="form-select" aria-label="Default select example" required="required">
                        <option id="dp" value=""></option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="message-text" class="col-form-label">Escala:</label>
                      <select id="funcionarioEscala" name="funcionarioEscala" class="form-select" aria-label="Default select example" required="required">
                        
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">Telefone:</label>
                      <input name="funcionarioTelefone" type="text" class="form-control" id="funcionarioTelefone" required="required">
                    </div> 
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">Data Admissao:</label>
                      <input name="dataAdmissao" type="date" class="form-control" id="dataAdmissao" required="required">
                    </div> 
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">Email:</label>
                      <input name="funcionarioEmail" type="email" class="form-control" id="funcionarioEmail" required="required">
                    </div> 
                    <div class="mb-3">
                      <label for="cpf" class="col-form-label">Senha:</label>
                      <input name="funcionarioSenha" type="text" class="form-control" id="funcionarioSenha" required="required">
                    </div> 
                    <button class="btn btn-primary" type="submit">Cadastrar</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
                </div>
              </div>
            </div>
          </div>
    </div>
    <div class="table-responsive" style="margin-top: 15px;">
